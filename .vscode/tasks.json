{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "command": "dotnet",
        "type": "process",
        "args": [ "build", "BirthdayBot.sln" ],
        "problemMatcher": "$msCompile"
      },
      {
        "label": "test",
        "command": "dotnet",
        "type": "process",
        "args": [ "test", "BirthdayBot.sln" ],
        "problemMatcher": "$msCompile",
        "dependsOn": "build"
      },
      {
        "label": "run api",
        "command": "dotnet",
        "type": "process",
        "args": [ "run", "--project", "backend/src/BirthdayBot.Api/BirthdayBot.Api.csproj" ],
        "problemMatcher": "$msCompile"
      }
    ]
  }
  